<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/finishTimeTV"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/deviceNameTV"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/subdeviceNameTV"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/checkStatusImage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/excIdTV"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/checkerNameTV"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_weight="1"
        android:textColor="#666872"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="36dp">
        <CheckBox
            android:id="@+id/checkRecordCB"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:clickable="false"
            android:focusable="false"
            android:button="@null"
            android:background="@drawable/checkbox_style"/>
    </LinearLayout>
    <TextView
        android:id="@+id/checklineNameTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_weight="0.1"
        android:visibility="gone"
        android:textColor="#666872"/>
</LinearLayout> 