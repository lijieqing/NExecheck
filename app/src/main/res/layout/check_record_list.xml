<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/finishTimeTV"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/deviceNameTV"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/subdeviceNameTV"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/checkStatusImage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/excIdTV"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/checkerNameTV"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#666872"/>
    <TextView
        android:id="@+id/checklineNameTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_weight="0.1"
        android:textColor="#666872"/>
</LinearLayout> 